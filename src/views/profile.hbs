<!DOCTYPE html>
    <head>
        <title>PCMundo</title>
        <link rel="stylesheet" href="/css/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </head>
    <body>
    {{> navbar}}
    <!-- Main content -->
    <div class="container mt-3">
      <div class="row">
          <!-- Profile Info -->
          <div class="col-md-3">
            <div class="profile-info text-center">
              <img src="data:image/jpeg;base64, {{profilePicture}}" class="img-fluid rounded-circle mb-3" alt="Profile Picture" style="max-width: 100px">
              <h3>{{username}}</h5>
              <h5>{{location}}</h3>
              <p class="text-left small m-0">Products: {{productCount}} Products</p>
              <p class="text-left small">Joined: Date {{formatDate dateJoined}}</p>

            {{#if isCurrentUser}}
                <a href="/profile/edit-profile" class="btn btn-primary">Edit Profile</a>
            {{/if}}
            </div> 
          </div>
          
          <div class="col-md-9">
          <div class="row">
              <!-- Product cards -->
            {{#each listings}}
                <div class="col-md-4 custom">
                  <div class="card h-100" id="{{this._id}}">
                    <img src="data:image/jpeg;base64,{{photos.[0].data}}" class="card-img-top max-height" alt="Listing Photo" id="cardimg">
                    <div class="card-body" id="cardbody">
                      <h5 class="card-title">{{price}}</h5>
                      <h5 class="card-text">{{name}}</h5>
                      <p class="text-desc">{{description}}</p>
                    </div>
                    <div class="card-footer">
                      <p class="time-posted">Posted: {{formatDate datePosted}}</p>
                    </div>
                    <div class="d-flex justify-content-center mt-2"> <!-- Center the button -->
                        <a href="/listing/{{this._id}}" class="btn btn-outline-primary btn-half-width">View</a>
                    </div>
                  </div>
                </div>
            {{/each}}
              <!-- Optionally add pagination here -->
          </div>
        </div>
      </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    </body>
</html>